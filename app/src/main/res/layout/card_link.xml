<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageLink"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textTituloLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageLink"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescricaoLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTituloLink"
            android:layout_toEndOf="@+id/imageLink" />

        <ImageButton
            android:id="@+id/buttonAbrirLink"
            style="@style/btnColored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDescricaoLink"
            android:layout_toEndOf="@+id/imageLink"
            android:layout_toStartOf="@id/buttonMarcarComoLido"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/open_in_new"
            />

        <ImageButton
            android:id="@+id/buttonMarcarComoLido"
            style="@style/btnColored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDescricaoLink"
            android:layout_alignParentEnd="true"
            android:src="@drawable/email_open"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>